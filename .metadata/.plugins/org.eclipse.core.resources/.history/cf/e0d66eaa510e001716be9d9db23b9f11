#ifndef _XV6_TYPES_H_
#define _XV6_TYPES_H_


#include <stdint.h>
#include <stdio.h>
#include <stddef.h>
#include <stdbool.h>
#include <stm32f7xx_hal.h>
#include <sys\types.h>

#include "fatfs\ff.h"

#define align_up(sz, al) (((uintptr_t)(sz)+ (uintptr_t)(al)-1) & ~((uintptr_t)(al)-1))
#define align_dn(sz, al) ((uintptr_t)(sz) & ~((uintptr_t)(al)-1))

#define MINORBITS       16
#define MINORMASK       ((1U << MINORBITS) - 1)

#define MAJOR(DEV)      ((DEV) >> MINORBITS)
#define MINOR(DEV)      (((DEV) & MINORMASK)
#define MKDEV(ma,mi)    (((ma) << MINORBITS) | (mi))

#define NELMS(arr) (sizeof((arr)) / sizeof((arr)[0]))
#endif
